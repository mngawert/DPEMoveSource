<form asp-action="EditEvent" enctype="multipart/form-data">

    <div class="row breadcrumbs-container">
        <div class="col-12">
            <div class="breadcrumbs">
                <a href="/Events">กิจกรรม</a> > <a href="#">ข้อมูลกิจกรรม</a> > เพิ่ม/แก้ไข
            </div>
            <div class="button-container">
                @*<a href="#" class="button green">บันทึก</a>*@
                <button type="submit" class="button green">บันทึก</button>
            </div>
        </div>
    </div>
    <div class="row event-manipulate">
        <div class="col-12">
            <div class="tabs">
                <span class="tab">ข้อมูลทั่วไป</span>
                <span class="tab">ประเภทกิจกรรม</span>
                <span class="tab">สถานที่</span>
                <span class="tab">สิ่งอำนวยความสะดวก</span>
                <span class="tab">รายละเอียด</span>
                <span class="tab">ภาพประกอบ</span>
            </div>
            <div class="tab_content">
                <div class="tab_item">
                    <div class="block-group">
                        <div class="heading">กิจกรรม</div>
                        <div class="entry-data">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ชื่อกิจกรรม <span class="req">*</span>
                                        </div>
                                        <div class="c field">
                                            <input type="hidden" asp-for="EventId" value="@Model.EventId" />
                                            <input type="text" asp-for="EventName" value="@Model.EventName" class="input-field w-100" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            งบประมาณ
                                        </div>
                                        <div class="c field">
                                            <input type="text" asp-for="Budget" value="@Model.Budget" class="input-field" /> บาท
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            <input type="checkbox" name="ProjectSelect" value="1" checked="@Model.ProjectSelect?.Equals("1")" /> โครงการ
                                        </div>
                                        <div class="c field">
                                            <select class="input-field">
                                                <option value="">กรุณาเลือก</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            จ่ายจริง
                                        </div>
                                        <div class="c field">
                                            <input type="text" name="Budgetused" value="@Model.Budgetused" class="input-field" /> บาท
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="block-group">
                        <div class="heading">ผู้รับผิดชอบ</div>
                        <div class="entry-data">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ชื่อผู้รับผิดชอบ
                                            @*โปรดระบุ*@
                                        </div>
                                        <div class="c field">
                                            @*<input type="text" asp-for="ResponsiblePerson" value="@Model.ResponsiblePerson" class="input-field" />*@
                                            <input type="radio" name="ResponsiblePersonType" value="1" checked="@Model.ResponsiblePersonType?.Equals("1")" /> ภาครัฐ
                                            <input type="radio" name="ResponsiblePersonType" value="2" checked="@Model.ResponsiblePersonType?.Equals("2")" /> เอกชน
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            @*<input type="radio" asp-for="ResponsiblePersonType" value="2" /> เอกชน โปรดระบุ*@
                                            โปรดระบุ
