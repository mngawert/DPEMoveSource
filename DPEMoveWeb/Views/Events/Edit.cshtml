                        </div>
                    </div>
                </div>
                <div class="tab_item">
                    @foreach (var topic in ViewBag.MEventFacilitiesTopic as List<MEventFacilitiesTopic>)
                    {
                        <div class="block-group">
                            <div class="heading">@topic.EventFacilitiesTopicName<div class="button-container"><button type="button" class="button small darkgreen" data-toggle="modal" data-target="#ModalTopic_@topic.EventFacilitiesTopicId">+เพิ่มรายการ</button></div></div>
                            <div class="entry-data">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table cellspacing="0" class="tbl-data" width="100%" id="tblTopic_@topic.EventFacilitiesTopicId">
                                            <thead>
                                                <tr>
                                                    <th class="name">ชื่อ</th>
                                                    <th class="amount">จำนวน</th>
                                                    <th class="unit">หน่วย</th>
                                                    <th class="manage center">จัดการ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade bd-example-modal-lg" id="ModalTopic_@topic.EventFacilitiesTopicId" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">

                                        <div class="modal-header">

                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            <div class="heading">เพิ่ม @topic.EventFacilitiesTopicName</div>
                                        </div>

                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-12">
                                                    <table cellspacing="0" class="tbl-data">
                                                        <tr>
                                                            <th class="name">ชื่อ</th>
                                                            <th class="amount">จำนวน</th>
                                                            <th class="unit">หน่วย</th>
                                                        </tr>
                                                        <tr>
                                                            <td><input type="text" id="txtFacilityName_@topic.EventFacilitiesTopicId" name="" value="" class="input-field" /></td>
                                                            <td><input type="text" id="txtFacilityAmount_@topic.EventFacilitiesTopicId" name="" value="" class="input-field" /></td>
                                                            <td><input type="text" id="txtFacilityUnit_@topic.EventFacilitiesTopicId" name="" value="" class="input-field" /></td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 text-right">
                                                    <button type="button" class="button darkgreen" data-dismiss="modal" onclick="AddEventFacilitiesToSession(@Model.EventId, @topic.EventFacilitiesTopicId)">เพิ่ม</button>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }


