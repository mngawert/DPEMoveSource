                                            <input type="text" name="Soi" value="@Model.Soi" class="input-field" />
                                        </div>
                                    </div>
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ถนน <span class="req">*</span>
                                        </div>
                                        <div class="c field">
                                            <input type="text" name="Road" value="@Model.Road" class="input-field" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="row-field clearfix">
