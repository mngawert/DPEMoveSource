                                @*<span asp-validation-for="Email" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Password"></label>
                                <input class="col-md-5 form-control" required asp-for="Password" />
                                @*<span asp-validation-for="Password" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="ConfirmPassword"></label>
                                <input class="col-md-5 form-control" required asp-for="ConfirmPassword" />
                                @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="AccountType">ประเภท</label>
                                <select asp-for="AccountType" class="col-md-5 form-control" asp-items="ViewBag.accountTypeList">
                                </select>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                </div>
                                <div>
                                    <a href="javascript:void(0)" id="btnPrivacy">นโยบายความเป็นส่วนตัว</a> • <a href="javascript:void(0)" id="btnTerm">ข้อกำหนดในการให้บริการ</a>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-5">
                                    <button type="submit" class="button darkgreen">ลงทะเบียน</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>


