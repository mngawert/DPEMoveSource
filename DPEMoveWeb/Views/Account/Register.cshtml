<div class="section">
    <div class="container">

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="row">
                    <div class="col-md-12">
                        <form id="frmRegister" method="post" autocomplete="off">
                            <div class="form-group row">
                                <div class="col-md-4"></div>
                                <div>
                                    <h4>กรุณากรอกข้อมูลลงทะเบียน</h4>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @*<label class="col-md-4 text-right" asp-for="IdcardNo">เลขประจำตัวประชาชน</label>*@

                                <div class="col-md-4">
                                    <select name="IdcardType" class="form-control">
                                        <option value="1">เลขประจำตัวประชาชน</option>
                                        <option value="2">หมายเลขหนังสือเดินทาง</option>
                                    </select>
                                </div>
                                <input class="col-md-5 form-control" required pattern="\d*" maxlength="13" asp-for="IdcardNo" />
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Name">ชื่อ</label>
                                <input class="col-md-5 form-control" required asp-for="Name" />
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Email"></label>
