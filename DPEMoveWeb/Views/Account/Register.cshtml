
@model RegisterViewModel

<div class="page-breadcrumbs" style="background-image: url('/images/bg-bc.jpg')">
    <div class="wellcome_sec">
        <div class="container">
            <div class="wellcome">
                <p>ยินดีต้อนรับสู่กรมพลศึกษา กระทรวงการท่องเที่ยวและกีฬา</p>
            </div>
        </div>
    </div>
    <div class="filter"></div>
    <div class="content-center">
        <div class="container">
            <h2 class="presentation-subtitle text-center">ลงทะเบียน</h2>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="row">
                    <div class="col-md-12">
                        <form id="frmRegister" method="post">
                            <div class="form-group row">
                                <div class="col-md-4"></div>
                                <div>
                                    <h4>กรุณากรอกข้อมูลลงทะเบียน</h4>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                @*<label class="col-md-4 text-right" asp-for="IdcardNo">เลขประจำตัวประชาชน</label>*@

                                <div class="col-md-4">
                                    <select name="IdcardType" class="form-control">
                                        <option value="1">เลขประจำตัวประชาชน</option>
                                        <option value="2">หมายเลขหนังสือเดินทาง</option>
                                    </select>
                                </div>
                                <input class="col-md-5 form-control" required pattern="\d*" maxlength="13" asp-for="IdcardNo" />
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Name">ชื่อ</label>
                                <input class="col-md-5 form-control" required asp-for="Name" />
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Email"></label>
                                <input class="col-md-5 form-control" required asp-for="Email" />
                                @*<span asp-validation-for="Email" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="Password"></label>
                                <input class="col-md-5 form-control" required asp-for="Password" />
                                @*<span asp-validation-for="Password" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="ConfirmPassword"></label>
                                <input class="col-md-5 form-control" required asp-for="ConfirmPassword" />
                                @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-md-4 text-right" asp-for="AccountType">ประเภท</label>
                                <select asp-for="AccountType" class="col-md-5 form-control" asp-items="ViewBag.accountTypeList">
                                </select>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-5">
                                    <button type="submit" class="button darkgreen">ลงทะเบียน</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>


    </div>
</div>
