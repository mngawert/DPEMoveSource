<div class="modal fade bd-example-modal-lg" id="Modal_CreatePSN" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" style="display:none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">ปิด</span>
                </button>
                <div>ลงทะเบียน</div>
            </div>
            <div class="modal-body">
                <form id="frmCreateGmsMember" autocomplete="off">
                    <div class="row">
                        <div class="col-12">
                            <div class="entry-data">
                                <div class="row">
                                    <div class="col-12">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">เลข<span class="req">*</span></th>
                                                <td class="td-id">
                                                    <select class="input-field">
                                                        <option value="">ประจำตัวประชาชน</option>
                                                    </select>&nbsp;&nbsp;<input type="text" name="HRS_ID" id="txtHRS_ID" value="" required class="input-field" style="width: 165px" />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">คำนำหน้า (ไทย)<span class="req">*</span></th>
                                                <td>
                                                    <select class="input-field" name="PREFIX_ID" id="ddlPREFIX_TH" required style="width: 165px">
                                                        <option value="">กรุณาเลือก</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">ชื่อ (ไทย)<span class="req">*</span></th>
                                                <td><input type="text" name="FIRST_NAME" id="txtFIRST_NAME" required style="width:165px" /></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">ชื่อ (อังกฤษ)<span class="req">*</span></th>
                                                <td><input type="text" name="FIRST_NAME_ENG" id="txtFIRST_NAME_ENG" required style="width:165px" /></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">สกุล (ไทย)<span class="req">*</span></th>
                                                <td><input type="text" name="LAST_NAME" id="txtLAST_NAME" required style="width:165px" /></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">สกุล (อังกฤษ)<span class="req">*</span></th>
                                                <td><input type="text" name="LAST_NAME_ENG" id="txtLAST_NAME_ENG" style="width:165px" required /></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 col-xl-5">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">เพศ<span class="req">*</span></th>
                                                <td>
                                                    <select class="input-field" name="SEX" id="ddlSEX" required>
                                                        <option value="1">ชาย</option>
                                                        <option value="2">หญิง</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-12 col-md-6 col-xl-5">

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">วันเกิด (วัน-เดือน-ปี)<span class="req">*</span></th>
                                                <td>
                                                    <input id="txtBIRTH_DATE" name="BIRTH_DATE" class="input-field" type="text" style="width:165px" data-provide="datepicker" data-date-language="th-th">
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <table class="tbl-fields th-aright" cellspacing="0">
                                            <tr>
                                                <th width="140">ประเภทบุคลากร</th>
                                                <td>
                                                    <select class="input-field" name="TYPE_ID" id="ddlTYPE_ID" required style="width:165px">
                                                        <option value="">กรุณาเลือก</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <input id="btnCreate" type="button" value="ลงทะเบียน" class="button darkgreen" />
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
