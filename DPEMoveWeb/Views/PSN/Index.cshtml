                        @*<button type="button" class="btn btn-lightgreen btn-round">ลงทะเบียน</button>*@
                        <a id="btnOpenPopupForCreatePSN" style="display:none" href="javascript:void(0);" class="btn btn-lightgreen btn-round" data-toggle="modal" data-target="#Modal_CreatePSN">ลงทะเบียน</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section no-top">
    <div class="container">
        <div class="row search-person">
            <div class="col-12">
                <div class="block-border">
                    <form method="get">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row-field clearfix">
                                    <div class="c lbl">
                                        จังหวัด
                                    </div>
                                    <div class="c field">
                                        <select id="ddlProvince" name="Province" class="input-field" style="width:150px">
                                            <option value="">แสดงทั้งหมด</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="row-field clearfix">
                                    <div class="c lbl">
                                        อำเภอ
                                    </div>
                                    <div class="c field">
                                        <select id="ddlAmphur" name="Amphur" class="input-field" style="width:150px">
                                            <option value="">แสดงทั้งหมด</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row-field clearfix">
                                    <div class="c lbl">
                                        ตำบล
                                    </div>
                                    <div class="c field">
                                        <select id="ddlTambon" name="Tambon" class="input-field" style="width:150px">
                                            <option value="">แสดงทั้งหมด</option>
                                        </select>
                                        <div class="col-advsearch"><a href="javascript:void(0);" id="btn-advsearch">ค้นหาขั้นสูง</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="section-advsearch">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ประเภทบุคลากรการกีฬา
                                        </div>
                                        <div class="c field">
                                            <select class="input-field" style="width:150px" id="ddlTYPE_ID_SEARCH" name="TYPE_ID_SEARCH">
                                                <option value="">กรุณาเลือก</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ชนิดกีฬา
                                        </div>
                                        <div class="c field">
                                            <select class="input-field" style="width:150px" id="ddlSPORT_ID" name="SPORT_ID">
                                                <option value="">กรุณาเลือก</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            ค้นจากชื่อ
                                        </div>
                                        <div class="c field">
                                            <input id="txtName" type="text" class="input-field" name="SEARCH_NAME" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row-field clearfix">
                                        <div class="c lbl">
                                            เลขบัตรประชาชน
                                        </div>
                                        <div class="c field">
                                            <input type="text" class="input-field" name="SEARCH_HRS_ID" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-button"><button type="submit" class="button darkgreen">แสดงข้อมูล</button></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row search-person-result">
            <div class="col-12">
                <div id="dvTotalItems"><label id="lblTotalItems"></label></div>
                <ul id="ul-search-person-result">
                </ul>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination" id="ulPagination">
                </ul>
            </nav>
        </div>
    </div>
</div>

