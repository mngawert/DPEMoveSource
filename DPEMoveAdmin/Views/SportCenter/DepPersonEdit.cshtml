@model DPEMoveDAL.Models.DepartmentPerson;

    <form asp-action="DepPersonEdit" method="post">
        <input name="departmentPersonId" type="hidden" value="@Model.DepartmentPersonId" />
        <input name="departmentId" type="hidden" value="@ViewBag.DepId" />

        <div class="row">
            <div class="col-md-11">
                <label>แก้ไขข้อมูลบุคลากร</label>
            </div>
            <div class="col-md-1">
                <button class="btn btn-success btn-block" asp-action="DepPersonEdit">บันทึก</button>
            </div>
        </div>
        <br />

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"><label>ชื่อ</label></div>
                            <input class="col-md-9 text-left form-control" name="firstName" type="text" value="@Model.Firstname" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"><label>สกุล</label></div>
                            <input class="col-md-9 text-left form-control" name="lastName" type="text" value="@Model.Lastname" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"><label>ตำแหน่ง</label></div>
                            <input class="col-md-9 text-left form-control" name="positionName" type="text" value="@Model.PositionName" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"><label>E-mail</label></div>
                            <input class="col-md-9 text-left form-control" name="email" type="text" value="@Model.Email" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"><label>โทรศัพท์</label></div>
                            <input class="col-md-9 text-left form-control" name="mobile" type="text" value="@Model.Mobile" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group row">
                            <div class="col-md-3 text-right"> <label>หัวหน้า</label></div>
                            <select asp-for="ParentPersonId" asp-items="ViewBag.ParentList2" class="col-md-9 form-control">
                                <option>---</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
