@model CpeConfig;

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h4 mb-0 text-gray-800">
        Configuration
    </h1>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="EditConfig" method="post">
            <input type="hidden" name="ConfigId" value="@Model.ConfigId" />
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="form-group row">
                        <label class="col-md-3 text-right">Name</label>
                        <input class="col-md-6 form-control" asp-for="Name" />
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 text-right">Value</label>
                        <textarea name="Value" class="col-md-6 form-control @(Model.Name == "DefaultEventStatus" ? "" : "myTextEditor")" style="height: 250px;" >@Model.Value </textarea>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 text-right">สถานะ</label>
                        <select class="col-md-3 form-control" asp-for="Status">
                            <option value="1">ใช้งาน</option>
                            <option value="2">ไม่ใช้งาน</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3 m-0 p-0 pt-3">
                            <button type="submit" class="btn btn-success btn-block">บันทึก</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

