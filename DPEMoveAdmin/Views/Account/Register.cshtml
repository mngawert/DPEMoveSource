
@model RegisterViewModel

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <h5>ลงทะเบียน</h5>
        <hr />

        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="IdcardNo">เลขประจำตัวประชาชน</label>
                        <input class="col-md-8 form-control" asp-for="IdcardNo" />
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="Name"></label>
                        <input class="col-md-8 form-control" asp-for="Name" />
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="Email"></label>
                        <input class="col-md-8 form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="Password"></label>
                        <input class="col-md-8 form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="ConfirmPassword"></label>
                        <input class="col-md-8 form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="AccountType"></label>
                        <select asp-for="AccountType" class="col-md-8 form-control">
                            <option value="1">System Admin</option>
                            <option value="2">เจ้าหน้าที่กรมพลศึกษา</option>
                            <option value="3">อาสาสมัครกีฬา (อสก.)</option>
                            <option value="4">ประชาชน</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="GroupId"></label>
                        <select asp-for="GroupId" class="col-md-8 form-control">
                            <option value="1">System Admin</option>
                            <option value="2">Group_2</option>
                            <option value="3">Group_3</option>
                            <option value="4">Group_4</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 text-right" asp-for="Status"></label>
                        <select asp-for="Status" class="col-md-8 form-control">
                            <option value="1">ใช้งาน</option>
                            <option value="2">ไม่ใช้งาน</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success btn-block">บันทึก</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>



