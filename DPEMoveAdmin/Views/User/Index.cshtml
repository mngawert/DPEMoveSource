@model IEnumerable<VW_USER>;
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h4 mb-0 text-gray-800">
        ผู้ใช้งานระบบ
    </h1>
    @*<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
    <a class="btn btn-success" asp-action="Create">สร้าง</a>
</div>

<div class="card">

    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 text-right">Email</label>
                        <input class="col-md-3 form-control" name="Email" />
                        <label class="col-md-2 text-right">ชื่อ</label>
                        <input class="col-md-3 form-control" name="Name" />
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 text-right">สถานะ</label>
                        <select class="col-md-3 form-control" name="Status">
                            <option value="1">ใช้งาน</option>
                            <option value="2">ไม่ใช้งาน</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success btn-block">แสดงข้อมูล</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>

    <div class="card-body">

        @*<h5 class="card-title">กลุ่มผู้ใช้งานระบบ :</h5>*@

        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">ชื่อ</th>
                    <th scope="col">กลุ่ม</th>
                    <th scope="col">กลุ่มสิทธิ์</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{ int rowNo = 1; }
                @foreach (var r in Model)
                {
                <tr>
                    <td scope="row">@(rowNo++)</td>
                    <td>@r.EMAIL</td>
                    <td>@r.NAME</td>
                    <td>@r.ACCOUNT_TYPE_NAME</td>
                    <td>@r.GROUP_NAME</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@r.APP_USER_ID">แก้ไข</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


