@model IEnumerable<MGroup>;
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h4 mb-0 text-gray-800">
        กลุ่มผู้ใช้งานระบบ
    </h1>
    @*<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
    <a class="btn btn-success" asp-action="Create">สร้าง</a>
</div>

<div class="card">

    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 text-right">Name</label>
                        <input class="col-md-3 form-control" name="GroupName" />
                        <label class="col-md-2 text-right">Description</label>
                        <input class="col-md-3 form-control" name="Description" />
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 text-right">สถานะ</label>
                        <select class="col-md-3 form-control" name="Status">
                            <option value="1">ใช้งาน</option>
                            <option value="2">ไม่ใช้งาน</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success btn-block">แสดงข้อมูล</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>

    <div class="card-body">

        @*<h5 class="card-title">กลุ่มผู้ใช้งานระบบ :</h5>*@

        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ชื่อกลุ่ม</th>
                    <th scope="col">คำอธิบาย</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{ int rowNo = 1; }
                @foreach (var r in Model)
                {
                <tr>
                    <td scope="row">@(rowNo++)</td>
                    <td>@r.GroupName</td>
                    <td>@r.Description</td>
                    <td style="width:40%">
                        <form asp-action="Delete" asp-route-id="@r.GroupId">

                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@r.GroupId">กำหนดสิทธิ์ Web</a>
                            <a class="btn btn-sm btn-dark" asp-action="Edit" asp-route-id="@r.GroupId">กำหนดสิทธิ์ Mobile</a>
                            <a class="btn btn-sm btn-facebook" asp-action="EditUsers" asp-route-id="@r.GroupId">กล่มผู้ใช้งาน</a>
                            <button class="btn btn-sm btn-danger" type="submit">ลบ</button>

                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        @*<a class="btn btn-primary" asp-action="Create">สร้างกลุ่มใหม่</a>*@
    </div>
</div>


